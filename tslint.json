{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier",
    "typescript-tslint-plugin"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts{,x}",
      "coverage/lcov-report/*.js",
      "src/setupTests.ts"
    ]
  },
  "rules": {
    "object-shorthand-properties-first": false,
    "no-console": false,
    "jsx-no-lambda": false,
    "no-reference": false,
    "import-name": false,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-snake-case"
    ],
    "interface-over-type-literal": false,
    "object-literal-sort-keys": false,
    "interface-name": false,
    "prefer-array-literal": [
      true,
      {
        "allow-type-parameters": true
      }
    ],
    "prettier": [
      true,
      {
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  }
}